{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Nova Postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título:</label>
            <Input type="text" id="titulo" name="titulo" placeholder="Título da postagem" class="form-control">

            <label for="slug">Slug:</label>
            <Input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control">
            
            <label for="descricao">Descrição:</label>
            <Input type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" class="form-control">

            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select">
               {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>

            <label for="conteudo">Conteudo:</label>
            <textarea type="text" id="conteudo" name="conteudo" 
                cols="30" rows="10"  class="form-control"></textarea>
            
            
            <button type="submit" class="btn btn-success mt-2">Criar postagem</button>
        </form>
    </div>
</div>